rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow authenticated users to upload their own avatar
    match /avatars/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regras para produtos (usu치rios autenticados podem escrever)
    match /products/{productId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regras para uploads (usu치rios autenticados podem escrever)
    match /uploads/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regras para pedidos (apenas usu치rios autenticados podem ler e escrever)
    match /orders/{orderId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Regras para testes (acesso total para usu치rios autenticados)
    match /test/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}