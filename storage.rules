rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files for any request
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow write access to all files for authenticated users
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // Test folder for Firebase operations tests
    match /test/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}