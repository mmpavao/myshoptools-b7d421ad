rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir leitura pública em todas as pastas
    match /{allPaths=**} {
      allow read: if true;
    }

    // Regras específicas para avatars (apenas o dono pode escrever)
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Regras para produtos (usuários autenticados podem escrever)
    match /products/{productId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regras para uploads (usuários autenticados podem escrever)
    match /uploads/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regras para pedidos (apenas usuários autenticados podem ler e escrever)
    match /orders/{orderId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Regras para testes (acesso total para usuários autenticados)
    match /test/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
